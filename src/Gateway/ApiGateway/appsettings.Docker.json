{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Ocelot": "Information"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "AutoPartsEcommerce_SuperSecretKey_MinimumLengthRequired_ForJWTSigning_2024",
    "Issuer": "AutoPartsEcommerce.IdentityAPI",
    "Audience": "autoparts-api",
    "Authority": "http://identity-api",
    "RequireHttpsMetadata": false,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true,
    "ClockSkew": "00:05:00"
  },
  "RateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 200
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 5000
      }
    ]
  },
  "CircuitBreaker": {
    "DurationOfBreak": "00:00:30",
    "ExceptionsAllowedBeforeBreaking": 5,
    "TimeoutValue": "00:00:10"
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:4200",
      "http://localhost:7000",
      "https://autoparts-admin.com",
      "https://autoparts-store.com"
    ],
    "AllowedHeaders": ["*"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowCredentials": true
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 200
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 5000
      }
    ]
  },
  "HealthChecksUris": {
    "IdentityAPI": "http://identity-api/health",
    "ProductCatalogAPI": "http://catalog-api/health",
    "InventoryAPI": "http://inventory-api/health",
    "OrderAPI": "http://orders-api/health",
    "PaymentAPI": "http://payment-api/health",
    "NotificationAPI": "http://notification-api/health",
    "LogisticsAPI": "http://logistics-api/health",
    "SellerManagementAPI": "http://seller-api/health",
    "SearchAPI": "http://search-api/health"
  },
  "HealthChecksUISettings": {
    "UIPath": "/health-ui",
    "EvaluationTimeInSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60
  },
  "Services": {
    "Identity": {
      "BaseUrl": "http://identity-api",
      "HealthCheck": "/health"
    },
    "ProductCatalog": {
      "BaseUrl": "http://catalog-api",
      "HealthCheck": "/health"
    },
    "Inventory": {
      "BaseUrl": "http://inventory-api",
      "HealthCheck": "/health"
    },
    "Order": {
      "BaseUrl": "http://orders-api",
      "HealthCheck": "/health"
    },
    "Payment": {
      "BaseUrl": "http://payment-api",
      "HealthCheck": "/health"
    },
    "Notification": {
      "BaseUrl": "http://notification-api",
      "HealthCheck": "/health"
    },
    "Logistics": {
      "BaseUrl": "http://logistics-api",
      "HealthCheck": "/health"
    },
    "Seller": {
      "BaseUrl": "http://seller-api",
      "HealthCheck": "/health"
    },
    "Search": {
      "BaseUrl": "http://search-api",
      "HealthCheck": "/health"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/api-gateway-.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {CorrelationId} {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
