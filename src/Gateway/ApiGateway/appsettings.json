{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Ocelot": "Information"
    }
  },
  "AllowedHosts": "*",
  "JwtSettings": {
    "SecretKey": "AutoPartsEcommerce_SuperSecretKey_MinimumLengthRequired_ForJWTSigning_2024",
    "Issuer": "AutoPartsEcommerce.IdentityAPI",
    "Audience": "autoparts-api",
    "Authority": "https://localhost:5001",
    "RequireHttpsMetadata": false,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true,
    "ClockSkew": "00:05:00"
  },
  "RateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 200
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 5000
      }
    ]
  },
  "CircuitBreaker": {
    "DurationOfBreak": "00:00:30",
    "ExceptionsAllowedBeforeBreaking": 5,
    "TimeoutValue": "00:00:10"
  },
  "CorsSettings": {
    "AllowedOrigins": [
      "https://localhost:3000",
      "https://localhost:4200",
      "https://autoparts-admin.com",
      "https://autoparts-store.com"
    ],
    "AllowedHeaders": ["*"],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowCredentials": true
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 200
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 5000
      }
    ]
  },
  "HealthChecksUris": {
    "IdentityAPI": "https://localhost:5001/health",
    "ProductCatalogAPI": "https://localhost:5002/health",
    "InventoryAPI": "https://localhost:5003/health",
    "OrderAPI": "https://localhost:5004/health",
    "PaymentAPI": "https://localhost:5005/health",
    "NotificationAPI": "https://localhost:5006/health",
    "LogisticsAPI": "https://localhost:5007/health",
    "SellerManagementAPI": "https://localhost:5008/health",
    "SearchAPI": "https://localhost:5009/health"
  },
  "HealthChecksUISettings": {
    "UIPath": "/health-ui",
    "EvaluationTimeInSeconds": 10,
    "MinimumSecondsBetweenFailureNotifications": 60
  },
  "Services": {
    "Identity": {
      "BaseUrl": "https://localhost:5001",
      "HealthCheck": "/health"
    },
    "ProductCatalog": {
      "BaseUrl": "https://localhost:5002",
      "HealthCheck": "/health"
    },
    "Inventory": {
      "BaseUrl": "https://localhost:5003",
      "HealthCheck": "/health"
    },
    "Order": {
      "BaseUrl": "https://localhost:5004",
      "HealthCheck": "/health"
    },
    "Payment": {
      "BaseUrl": "https://localhost:5005",
      "HealthCheck": "/health"
    },
    "Notification": {
      "BaseUrl": "https://localhost:5006",
      "HealthCheck": "/health"
    },
    "Logistics": {
      "BaseUrl": "https://localhost:5007",
      "HealthCheck": "/health"
    },
    "SellerManagement": {
      "BaseUrl": "https://localhost:5008",
      "HealthCheck": "/health"
    },
    "Search": {
      "BaseUrl": "https://localhost:5009",
      "HealthCheck": "/health"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/gateway-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{CorrelationId}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:5341"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  }
}
